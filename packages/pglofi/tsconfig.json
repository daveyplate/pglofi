{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "outDir": "dist",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "watchOptions": {
        "excludeFiles": [
            "package.json"
        ]
    }
}
